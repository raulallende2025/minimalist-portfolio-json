---
import Section from "../Section.astro"

import { certificates } from "@cv"
---

<Section title="Certifications">
  <ul>
    {
      certificates.map(({ name, issuer, date, url }) => {
        const startYear = new Date(date).getFullYear()

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                </div>

                {/* <time>{startYear}</time> */}
              </header>

              <footer>
                <a href={url}
                  title={`Verify the certification ${name}`}
                  target="_blank"
                  rel="noopener noreferrer">{issuer}</a>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    text-align: end;
  }
  a {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
    text-decoration: underline;
  }
</style>
